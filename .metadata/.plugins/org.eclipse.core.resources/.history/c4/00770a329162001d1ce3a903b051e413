#include "modify.h"

void modify_run(int led){
	switch(led){
	case RED:
		if(button2_flag==1){
			button2_flag=0;
			red_timer_global++;
			if(red_timer_global>=100){
				red_timer_global=0;
			}
		}
		break;
	case GREEN:
		if(button2_flag==1){
			button2_flag=0;
			red_timer_global++;
			if(red_timer_global>=100){
				red_timer_global=0;
			}
		}
		break;
	case AMBER:
		if(button2_flag==1){
			button2_flag=0;
			red_timer_global++;
			if(red_timer_global>=100){
				red_timer_global=0;
			}
		}
		break;
	default:
			break;
	}
}
